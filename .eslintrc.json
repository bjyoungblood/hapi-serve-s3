{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "func-names": 0,
    "padded-blocks": 0,
    "arrow-body-style": 0,
    "no-multi-assign": 0,
    "no-param-reassign": 0,
    "no-confusing-arrow": 0,
    "no-shadow": 0,
    "max-len": [ 1, 120, 2, { "ignoreComments": true } ],
    "comma-dangle": [ 2, "never" ],
    "new-cap": [ 2, { "newIsCap": true, "capIsNew": false } ],
    "arrow-parens": [ 2, "always" ],
    "import/no-extraneous-dependencies": [ 2, { "devDependencies": true } ]
  }
}
